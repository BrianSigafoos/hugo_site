{
  "version": "2.0.0",
  "description": "Weblog v2",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "10.1.0",
    "postcss": "8.2.10",
    "postcss-cli": "8.3.1",
    "postcss-import": "13.0.0",
    "prettier": "2.2.1",
    "stylelint": "13.8.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-scss": "3.18.0",
    "tailwindcss": "2.0.2"
  },
  "scripts": {
    "fix:css": "yarn prettier --write 'assets/**/*.css'; yarn stylelint --fix 'assets/**/*.css'",
    "fix:md": "yarn prettier --write './*.md'; yarn prettier --write './**/*.md'",
    "fix": "yarn run fix:css; yarn run fix:md",
    "build": "hugo server --gc",
    "deploy": "./deploy.sh"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "maintained node versions",
    "not dead"
  ]
}
