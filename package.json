{
  "version": "2.0.0",
  "description": "Weblog v2",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "10.0.1",
    "postcss": "8.1.1",
    "postcss-cli": "8.1.0",
    "postcss-import": "12.0.1",
    "prettier": "2.1.2",
    "stylelint": "13.7.2",
    "stylelint-config-standard": "20.0.0",
    "stylelint-scss": "3.18.0",
    "tailwindcss": "1.9.4"
  },
  "scripts": {
    "fix:css": "yarn prettier --write 'assets/**/*.css'; yarn stylelint --fix 'assets/**/*.css'",
    "fix:md": "yarn prettier --write './*.md'; yarn prettier --write './**/*.md'",
    "fix": "yarn run fix:css; yarn run fix:md",
    "build": "hugo server --gc",
    "deploy": "./deploy.sh"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "maintained node versions",
    "not dead"
  ]
}
