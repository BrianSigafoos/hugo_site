{
  "version": "2.0.0",
  "description": "Weblog v2",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "10.4.2",
    "postcss": "8.4.8",
    "postcss-cli": "9.1.0",
    "prettier": "2.5.1",
    "tailwindcss": "3.0.23"
  },
  "scripts": {
    "update": "scripts/update_dependencies.sh",
    "build": "hugo server --gc",
    "debug": "NODE_ENV=production hugo server --gc",
    "fix:css": "yarn prettier --write 'assets/**/*.css'",
    "fix:md": "yarn prettier --write './*.md'; yarn prettier --write './**/*.md'",
    "fix": "yarn run fix:css; yarn run fix:md",
    "submodule:latest": "git submodule foreach --recursive git checkout main; git submodule foreach --recursive git pull origin main"
  },
  "browserslist": [
    "supports es6-module"
  ],
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
