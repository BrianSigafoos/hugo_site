{
  "version": "2.0.0",
  "description": "Weblog v2",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "10.2.6",
    "postcss": "8.3.0",
    "postcss-cli": "8.3.1",
    "postcss-import": "14.0.2",
    "prettier": "2.3.1",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-standard": "22.0.0",
    "tailwindcss": "2.1.4"
  },
  "scripts": {
    "fix:css": "yarn prettier --write 'assets/**/*.css'; yarn stylelint --fix 'assets/**/*.css'",
    "fix:md": "yarn prettier --write './*.md'; yarn prettier --write './**/*.md'",
    "fix": "yarn run fix:css; yarn run fix:md",
    "build": "hugo server --gc",
    "debug": "NODE_ENV=production hugo server --gc",
    "deploy": "./deploy.sh"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "maintained node versions",
    "not dead"
  ],
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "screen",
            "layer",
            "tailwind"
          ]
        }
      ]
    }
  }
}
